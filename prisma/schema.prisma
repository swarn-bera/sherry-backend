generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  refreshToken String?
  expenses Expense[]
}

model Expense {
  id String @id @default(uuid())
  reason String
  amount Float
  category String?
  paidTo String?
  date DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id])
}
